#version 450 core

/*
struct Material {
    sampler2D diffuse;
    sampler2D specular;
    float shininess;
};
*/

uniform vec3 cameraPostion;

in vec2 vTexCoord;
out vec4 color;

uniform sampler2D diffuseTexture;

void main() {
	color = vec4(texture(diffuseTexture, vTexCoord));
	//color = vec4(1.0, 1.0, 1.0, 1.0);
}